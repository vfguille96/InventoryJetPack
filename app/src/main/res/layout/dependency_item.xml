<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/ivIconSection"
        android:layout_width="@dimen/letter_icon_size"
        android:layout_height="@dimen/letter_icon_size"
        android:layout_margin="@dimen/padding_16dp"
        app:mli_initials_number="1"
        app:mli_letter="S"
        app:mli_letter_color="@android:color/white"
        app:mli_shape_color="@color/colorPrimaryDark"
        app:mli_shape_type="circle" />

    <TextView
        android:id="@+id/tvName"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16dp"
        android:layout_marginRight="@dimen/padding_16dp"
        android:fontFamily="@font/productsansregular"
        android:text="@string/name"
        android:textSize="14sp" />

</LinearLayout>